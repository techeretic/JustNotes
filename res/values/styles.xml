        <item name="windowActionBar">false</item>
        <item name="addButton">@drawable/ic_action_new_light</item>
        <item name="deleteButton">@drawable/ic_action_discard_light</item>
        <item name="shareButton">@drawable/ic_action_share_light</item>
        <item name="editButton">@drawable/ic_action_edit_light</item>
        <item name="saveButton">@drawable/ic_action_save_light</item>
        <item name="searchButton">@drawable/ic_search_light</item>
        <item name="paletteButton">@drawable/ic_palette_light</item>
        <item name="homeButtonNotes">@drawable/ic_assignment_light</item>
        <item name="homeButtonViewNote">@drawable/ic_speaker_notes_light</item>
        <item name="backgroundcolor">@color/primary_material_dark</item>
        <item name="fab_color">@color/primary_dark_material_dark</item>
    </style>
    <style name="AppThemeDark" parent="AppBaseThemeDark">
    </style>
    
